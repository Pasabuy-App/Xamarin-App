            <tabView:SfTabItem Title="MESSAGE"
                               IconFont="{StaticResource Message}"
                               FontIconFontColor="{DynamicResource Gray-200}"
                               FontIconFontFamily="{StaticResource FontFamily}"
                               TitleFontColor="{DynamicResource Gray-200}"
