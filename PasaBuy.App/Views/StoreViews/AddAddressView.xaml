                                </Image.GestureRecognizers>
                            </Image>

                            <Image
                                Grid.Column="2"
                                HeightRequest="32"
                                HorizontalOptions="Center"
                                Source="picture_black.png"
                                VerticalOptions="Center"
                                WidthRequest="32">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer  NumberOfTapsRequired="1" />
                                </Image.GestureRecognizers>
