<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PasaBuy.App.Views.Chat.ChatMessagePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behavior="clr-namespace:PasaBuy.App.Behaviors.Chat"
    xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms"
    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:controls="clr-namespace:PasaBuy.App.Controls"
    xmlns:converter="clr-namespace:PasaBuy.App.Converters"
    xmlns:listView="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    xmlns:local="clr-namespace:PasaBuy.App.Views.Chat"
    xmlns:viewModel="clr-namespace:PasaBuy.App.ViewModels.Chat"
    BackgroundColor="{DynamicResource Gray-White}"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
            <local:MessageDataTemplateSelector x:Key="MessageDataTemplateSelector" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ControlTemplate>
        <ControlTemplate>
            <StackLayout Spacing="0" >
                <controls:TitleView Title="Conversation" 
                                    BackgroundColor="{DynamicResource PrimaryColor}" >
                    <controls:TitleView.LeadingView>
                        <buttons:SfButton
                            x:Name="backButton"
                            Clicked="BackButtonClicked"
                            CornerRadius="4"
                            Style="{StaticResource IconButtonStyle}"
                            Text="{StaticResource Back}" />
                    </controls:TitleView.LeadingView>
                </controls:TitleView>
                <ContentPresenter />
            </StackLayout>
        </ControlTemplate>
    </ContentPage.ControlTemplate>

    <ContentPage.BindingContext>
        <viewModel:ChatMessageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" Default="0, 0, 0, 0" />
    </ContentPage.Padding>

    <ContentPage.Content>

        <Grid>
            <Grid.Padding>
                <OnIdiom x:TypeArguments="Thickness">
                    <OnIdiom.Phone>0,5,0,0</OnIdiom.Phone>
                    <OnIdiom.Tablet>50,0,50,0</OnIdiom.Tablet>
                </OnIdiom>
            </Grid.Padding>
            <ScrollView>

                <!--  List view to show the recent chat history  -->
                <listView:SfListView LoadMorePosition="Top" LoadMoreOption="AutoOnScroll" IsBusy="{Binding isBusy}" LoadMoreCommand="{Binding LoadMoreItemsCommand}"
                    x:Name="ListView"
                    AutoFitMode="Height"
                    BackgroundColor="{StaticResource Transparent}"
                    FocusBorderThickness="0"
                    IsStickyFooter="True"
                    IsStickyHeader="True"
                    ItemTemplate="{StaticResource MessageDataTemplateSelector}"
                    ItemsSource="{Binding ChatList}"
                    RowSpacing="12"
                    SelectionMode="None"
                    VerticalOptions="Fill">

                    <listView:SfListView.Behaviors>
                        <behavior:ChatMessageListViewBehavior />
                    </listView:SfListView.Behaviors>

                    <listView:SfListView.GroupHeaderTemplate>
                        <DataTemplate>
                            <Label
                                Margin="0,16,0,0"
                                FontFamily="{StaticResource Montserrat-Medium}"
                                FontSize="12"
                                HorizontalTextAlignment="Center"
                                LineHeight="1.5"
                                Text="{Binding Key, Converter={StaticResource DateTimeToStringConverter}}"
                                TextColor="{DynamicResource Gray-700}" />
                        </DataTemplate>
                    </listView:SfListView.GroupHeaderTemplate>

                    <!--  Navigation bar  -->
                    <listView:SfListView.HeaderTemplate>
                        <DataTemplate>
                            <StackLayout
                                Padding="20, 10"
                                BackgroundColor="{DynamicResource Gray-200}"
                                HorizontalOptions="FillAndExpand"
                                Orientation="Horizontal"
                                Spacing="0"
                                VerticalOptions="Fill">

                                <!--  Rounded Profile Image  -->
                                <border:SfBorder
                                    Margin="8,0"
                                    BackgroundColor="{DynamicResource Gray-200}"
                                    Style="{StaticResource ProfileBorderStyle}">
                                    <Image
                                        HeightRequest="35"
                                        WidthRequest="35">
                                        <Image.Source>
                                            <UriImageSource Uri="{Binding ProfileImage}" 
			                                 CacheValidity="14" 
			                                 CachingEnabled="true"/>
                                        </Image.Source>
                                    </Image>
                                </border:SfBorder>

                                <!--  Profile Name  -->
                                <Label
                                    FontFamily="{StaticResource Montserrat-SemiBold}"
                                    FontSize="16"
                                    HorizontalOptions="FillAndExpand"
                                    Text="{Binding ProfileName}"
                                    TextColor="{DynamicResource Gray-Black}"
                                    VerticalOptions="Center"
                                    VerticalTextAlignment="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ProfileCommand}" />
                                    </Label.GestureRecognizers>
                                </Label>

                                <!--  Video call button  -->
                                <!--<buttons:SfButton
                                    Command="{Binding MakeVideoCall}"
                                    Style="{StaticResource NavigationBarButtonStyle}"
                                    Text="{StaticResource VideoCall}" />-->

                                <!--  Voice call button  -->
                                <!--buttons:SfButton
                                    Command="{Binding MakeVoiceCall}"
                                    Style="{StaticResource NavigationBarButtonStyle}"
                                    Text="{StaticResource VoiceCall}" /-->

                                <!--  Menu Button  -->
                                <!--buttons:SfButton
                                    Command="{Binding MenuCommand}"
                                    Style="{StaticResource NavigationBarButtonStyle}"
                                    Text="{StaticResource Menu}" /-->

                            </StackLayout>
                        </DataTemplate>
                    </listView:SfListView.HeaderTemplate>

                    <!--  New text entry in the chat conversation  -->
                    <listView:SfListView.FooterTemplate>
                        <DataTemplate>
                            <Grid Padding="16,5,16,24" ColumnSpacing="16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Rounded Border  -->
                                <border:SfBorder Padding="5,0" Style="{DynamicResource SfBorderStyle}">

                                    <Grid ColumnSpacing="0">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Extendable editor  -->
                                        <controls:BorderlessEditor
                                            Placeholder="Type here"
                                            Style="{StaticResource ChatMessageEditorStyle}"
                                            Text="{Binding NewMessage}" />

                                        <!--  Camera Button  -->
                                        <!--buttons:SfButton
                                            Grid.Column="1"
                                            Command="{Binding ShowCamera}"
                                            Style="{StaticResource NavigationBarButtonStyle}"
                                            Text="{StaticResource Camera}"
                                            VerticalOptions="End" /-->

                                    </Grid>
                                </border:SfBorder>

                                <!--  Send Button  -->
                                <buttons:SfButton
                                    Grid.Column="1"
                                    BackgroundColor="{DynamicResource PrimaryColor}"
                                    Command="{Binding SendCommand}"
                                    CornerRadius="20"
                                    HeightRequest="40"
                                    HorizontalOptions="End"
                                    Style="{StaticResource NavigationBarButtonStyle}"
                                    VerticalOptions="End"
                                    WidthRequest="40">
                                    <buttons:SfButton.Content>
                                        <Label
                                            Margin="0,2,2,0"
                                            FontFamily="{StaticResource FontIcons}"
                                            FontSize="18"
                                            HorizontalOptions="Center"
                                            Text="{StaticResource Send}"
                                            TextColor="{DynamicResource Gray-White}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />
                                    </buttons:SfButton.Content>
                                </buttons:SfButton>

                            </Grid>
                        </DataTemplate>
                    </listView:SfListView.FooterTemplate>
                </listView:SfListView>

            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>