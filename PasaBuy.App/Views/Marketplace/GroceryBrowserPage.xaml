<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewModel="clr-namespace:PasaBuy.App.ViewModels.Marketplace" 
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms" 
             xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms" 
             xmlns:controls="clr-namespace:PasaBuy.App.Controls" 
             xmlns:template="clr-namespace:PasaBuy.App.Views.Templates"
             xmlns:badge="clr-namespace:Syncfusion.XForms.BadgeView;assembly=Syncfusion.SfBadgeView.XForms" 
             xmlns:listView="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms" xmlns:core="clr-namespace:Syncfusion.XForms.Core;assembly=Syncfusion.Core.XForms" xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="PasaBuy.App.Views.Marketplace.GroceryBrowserPage"
             BackgroundColor="White">

    <ContentView.BindingContext>
        <viewModel:GroceryBrowserViewModel />
    </ContentView.BindingContext>

    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Stylex.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>

    <ContentView.Content>
            <StackLayout Margin="0,20,0,20">
                <listView:SfListView
                    Padding="15,0,15,15"
                    AutoFitMode="Height"
                    IsScrollBarVisible="False"
                    ItemSpacing="{core:OnPlatformOrientationThickness Default='0,0,32,32',
                                                                  PhonePortrait='0,0,0,16',
                                                                  PhoneLandscape='0,0,16,16',
                                                                  Desktop='0,0,24,24'}"
                    ItemsSource="{Binding Grocerystorelist}"
                    ItemTapped="GroceriesTapped"
                    ItemAppearing="RestaurantList_ItemAppearing"
                    x:Name="RestaurantList"
                    SelectionBackgroundColor="Transparent"
                    VerticalOptions="FillAndExpand">

                    <listView:SfListView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                            Padding="0"
                            BackgroundColor="{DynamicResource Gray-White}"
                            BorderColor="{DynamicResource Gray-White}"
                            CornerRadius="8"
                            HasShadow="True"
                            HeightRequest="130"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                                <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="50*"/>
                                </Grid.ColumnDefinitions>

                                <Label FontFamily="{StaticResource Montserrat-SemiBold}"
                                       Padding="10,5,0,0"
                                       FontSize="13"
                                       Grid.Row="0"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="1"
                                       MaxLines="2"
                                       LineBreakMode="TailTruncation"
                                       VerticalTextAlignment="Center"
                                       HorizontalTextAlignment="Start"
                                       Text="{Binding Title}"
                                       TextColor="{DynamicResource Gray-900}" />
                                
                                <Label FontFamily="{StaticResource Montserrat-Regular}"
                                       Padding="10,5,0,0"
                                       Margin="0,-10,0,0"
                                       FontSize="13"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="1"
                                       MaxLines="2"
                                       HeightRequest="50"
                                       LineBreakMode="TailTruncation"
                                       VerticalTextAlignment="Center"
                                       HorizontalTextAlignment="Start"
                                       Text="#4 Rainbow Ave, Pacita 2, San Pedro City, Laguna"
                                       TextColor="{DynamicResource Gray-900}" />

                        

                                <Label Margin="130,0,0,0"
                                       Grid.Row="2" 
                                       Grid.Column="1"
                                       FontFamily="{StaticResource FontIcons}"
                                       FontSize="27"
                                       HorizontalTextAlignment="Center"
                                       Text="{StaticResource ArrowRight}"
                                       TextColor="{DynamicResource PrimaryColor}"
                                       VerticalTextAlignment="Center" />

                                <ffimageloading:CachedImage Aspect="Fill"
                                                            Grid.Column="0"
                                                            Grid.RowSpan="3"
                                                            Source="https://pasabuy.app/wp-content/uploads/2020/09/a4f9c4b509d35d0697d09450fc2f20ba4893f630-tricycle-02.jpg?fbclid=IwAR2Sl_-CoFNEXiS6sZW_RWMBqzcu6QhcsBlan7wV7mWxwFRVUTnEqU-hdKg"
			                                                DownsampleToViewSize="True" 
                                                            FadeAnimationEnabled="True">
                                </ffimageloading:CachedImage>



                            </Grid>
                            </Frame>
                        </DataTemplate>
                    </listView:SfListView.ItemTemplate>

                </listView:SfListView>
            </StackLayout>
    </ContentView.Content>
</ContentView>